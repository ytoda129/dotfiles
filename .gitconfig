[include]
	path = ~/.gitconfig.local
[core]
	editor = vim -c \"set fenc=utf-8\"
	pager = less -R -F -X
[alias]
	fprune = fetch --prune
	undo = reset --soft HEAD^
	glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	st = status
	ci = commit
	br = branch
	co = checkout
	sm = submodule
	fl = flow
	fli = flow init
	flf = flow feature
[merge]
	ff = false
[push]
	default = simple
[pull]
	ff = only
