// Place your key bindings in this file to override the defaultsauto[]
[
    {
        "key": "ctrl+[BracketLeft]",
        "command": "emacs-mcx.setMarkCommand",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+space",
        "command": "-emacs-mcx.setMarkCommand",
        "when": "editorTextFocus"
    },
    {
        "key": "tab",
        "command": "emacs-tab.reindentCurrentLine"
    },
    {
        "key": "shift+alt+,",
        "command": "cursorTop",
        "when": "textInputFocus"
    },
    {
        "key": "cmd+up",
        "command": "-cursorTop",
        "when": "textInputFocus"
    },
    {
        "key": "shift+alt+.",
        "command": "cursorBottom",
        "when": "textInputFocus"
    },
    {
        "key": "cmd+down",
        "command": "-cursorBottom",
        "when": "textInputFocus"
    },
    {
        "key": "alt+[Semicolon]",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+/",
        "command": "-editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+/",
        "command": "-editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+[Semicolon]",
        "command": "-editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"
    }
]